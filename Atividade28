-- pergunta 1 --

CREATE DATABASE NorthWind;

USE NorthWind;

CREATE TABLE customers (
	customerID INT,
	companyname VARCHAR(30)

);

INSERT INTO customers (customerID,companyname)
VALUES(1,"Starlink"),
	  (2,"McDonalds"),
      (3,"Novo banco"),
      (4,"NOS internet"),
      (5,"BMW");
      
SELECT *
FROM customers ORDER BY companyname ASC;

-- pergunta 2 --

ALTER TABLE customers
ADD contactoName VARCHAR(50);
ALTER TABLE customers
ADD region VARCHAR(20);
ALTER TABLE customers
ADD country VARCHAR(50);

DROP TABLE customers;

-- INSERT INTO customers (contactoNAME,region,country);

UPDATE customers 
SET contactoName = "cntAnsuman" ,
	region = "coimbra" ,
    country = "portugal"
WHERE customerID = 1;

UPDATE customers 
SET contactoName = "cntJoao" ,
	region = "california" ,
    country = "estados unidos"
WHERE customerID = 2;

UPDATE customers 
SET contactoName = "cntGustavo" ,
	region = "londres" ,
    country = "reino unido"
WHERE customerID = 3;

UPDATE customers 
SET contactoName = "cntMendes" ,
	region = "rua do Putin" ,
    country = "russia"
WHERE customerID = 4;

UPDATE customers 
SET contactoName = "cntAimar" ,
	region = "Sae paulo" ,
    country = "Brazil"
WHERE customerID = 5;

SELECT * FROM customers ORDER BY region ASC;

SET SQL_SAFE_UPDATES = 0;


-- Pergunta 3 -- 

CREATE TABLE productos (
	productoID INT PRIMARY KEY,
	categoryID INT,
    productoName VARCHAR(40),
    supplierID INT,
    unitsinstock INT
    
);
DROP TABLE productos;

SELECT productoName 
FROM productos 
WHERE categoryID = 1 AND unitsinstock > 0 
ORDER BY unitsinstock DESC;

INSERT INTO productos
VALUES(1 ,  5 , "Oreo" , 10 , 100),
	  (2 , 1 , "Jeans" , 20 , 20),
      (3 , 5 , "Jacket" , 1 , 30);
       
       
-- PERGUNTA 4 --

CREATE TABLE encomendas(
	orderID INT PRIMARY KEY,
    quantity INT,
    productoID INT,
    FOREIGN KEY (productoID) REFERENCES productos(productoID)
    
);
SELECT  productoID , quantity
FROM encomendas
WHERE orderID IN (10812,97283,67283);


DROP TABLE ENCOMENDAS;

SELECT productoID , quantity FROM encomendas;
SELECT * FROM encomendas;

INSERT INTO encomendas
VALUES(10812 , 20 , 1 ),
	  (97283 , 11 , 2),
	  (67283 , 10 , 3)


