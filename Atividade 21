drop table clientes;
drop table funcionario;

SELECT *
FROM clientes
CROSS JOIN funcionario;

SELECT *
FROM clientes
INNER JOIN funcionario ON Criado_por_funcID = funcionarioID;

SELECT *
FROM clientes
LEFT JOIN funcionario ON Criado_por_funcID = funcionarioID;

SELECT *
FROM clientes
RIGHT JOIN funcionario ON Criado_por_funcID = funcionarioID;

